<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane prefHeight="600.0" prefWidth="475.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <tabs>
        <Tab text="Select Student">
            <content>
                <GridPane>
                    <Label text="StudentID" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <GridPane.margin>
                            <Insets left="20.0" top="10.0" />
                        </GridPane.margin>
                    </Label>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <GridPane.margin>
                            <Insets left="20.0" top="10.0" />
                        </GridPane.margin>
                    </TextField>
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" />
                    </rowConstraints>
                </GridPane>
            </content>
        </Tab>
        <Tab text="List of Students">
            <content>
                <TableView prefHeight="200.0" prefWidth="300.0" fx:id="tableStudents" >
                    <columns>
                        <TableColumn prefWidth="100.0" text="StudentID" fx:id="tableColumnStudentID" />
                        <TableColumn prefWidth="100.0" text="Name" fx:id="tableColumnStudentName" />
                        <TableColumn prefWidth="100.0" text="City" fx:id="tableColumnStudentCity" />
                    </columns>
                </TableView>
            </content>
        </Tab>
        <Tab text="Courses">
            <content>
                <TableView prefHeight="200.0" prefWidth="500.0" fx:id="tableCourses" >
                    <columns>
                        <TableColumn prefWidth="100.0" text="CourseID" fx:id="tableColumnCourseID" />
                        <TableColumn prefWidth="100.0" text="Name" fx:id="tableColumnCourseName" />
                        <TableColumn prefWidth="100.0" text="Teachers" fx:id="tableColumnCourseTeachers" />
                        <TableColumn prefWidth="100.0" text="Semester" fx:id="tableColumnCourseSemester" />
                        <TableColumn prefWidth="100.0" text="Year" fx:id="tableColumnCourseYear" />
                    </columns>
                </TableView>
            </content>
        </Tab>
    </tabs>
</TabPane>
